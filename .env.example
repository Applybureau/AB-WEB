# Apply Bureau Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here

# Security
JWT_SECRET=your_secure_jwt_secret_here_minimum_32_characters

# Server Configuration
PORT=3000
NODE_ENV=production

# Frontend Configuration
FRONTEND_URL=https://your-frontend-domain.com

# Optional: Database Configuration (if using direct Postgres connection)
# DATABASE_URL=postgresql://username:password@host:port/database

# Optional: Redis Configuration (for session storage)
# REDIS_URL=redis://localhost:6379

# Optional: Monitoring
# SENTRY_DSN=your_sentry_dsn_here

# Optional: File Storage (if using AWS S3 instead of Supabase)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name